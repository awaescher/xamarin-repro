<?xml version="1.0" encoding="utf-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:d="http://xamarin.com/schemas/2014/forms/design"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="repro.Views.TranslucentNavbarWithScrollviewAndRefreshView"
	Title="{Binding Title}"
	x:Name="BrowseItemsPage">
	<ContentPage.ToolbarItems>
		<ToolbarItem
			Text="Add"
			Clicked="AddItem_Clicked" />
	</ContentPage.ToolbarItems>
	<RefreshView
		IsRefreshing="{Binding IsBusy, Mode=TwoWay}"
		Command="{Binding LoadItemsCommand}">
		<ScrollView>
			<StackLayout>
				<BoxView
					HeightRequest="40"
					Color="Red" />
				<BoxView
					HeightRequest="40"
					Color="LimeGreen" />
				<BoxView
					HeightRequest="40"
					Color="Blue" />
				<BoxView
					HeightRequest="40"
					Color="Red" />
				<BoxView
					HeightRequest="40"
					Color="LimeGreen" />
				<BoxView
					HeightRequest="40"
					Color="Blue" />
				<BoxView
					HeightRequest="40"
					Color="Red" />
				<BoxView
					HeightRequest="40"
					Color="LimeGreen" />
				<BoxView
					HeightRequest="40"
					Color="Blue" />
				<BoxView
					HeightRequest="40"
					Color="Red" />
				<BoxView
					HeightRequest="40"
					Color="LimeGreen" />
				<BoxView
					HeightRequest="40"
					Color="Blue" />
			</StackLayout>
		</ScrollView>
	</RefreshView>
</ContentPage>